<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="news"
            type="com.popular.broadcast.domain.schedule.model.News" />

        <variable
            name="callback"
            type="com.popular.broadcast.presentation.base.handler.AppInterface" />

    </data>

    <RelativeLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="@{(item_root) -> callback.onCallback(news)}">

<!--    android:onClick="@{(iv_play_btn) -> com.dch.aplayer.app_ui.binders.MediaPlayerKt.playPauseMedia(iv_play_btn, mediaModel)}"-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/news_thumb_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:load_url_or_placeholder="@{news.thumb}"
            app:shapeAppearanceOverlay="@style/circleImageView"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-5dp"
            android:layout_toStartOf="@+id/detail_arrow_iv"
            android:layout_toEndOf="@+id/news_thumb_iv"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@{news.title}"
                android:maxLines="3" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/by_line_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{news.byline}"
                    android:lines="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="17dp"
                    android:background="@color/date_bg_color"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:paddingStart="3dp"
                    android:paddingEnd="5dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="3dp"
                        android:gravity="end|bottom"
                        android:src="@drawable/ic_events_icon"
                        app:tint="@color/detail_arrow_color"
                        android:contentDescription="@string/news_published_updated_date" />

                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:lines="1"
                        android:text="@{com.popular.broadcast.util.TimeUtil.getDateFormatted(news.updated)}" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/detail_arrow_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-5dp"
            android:padding="3dp"
            android:src="@drawable/ic_arrow_end"
            app:tint="@color/detail_arrow_color" />

    </RelativeLayout>

</layout>